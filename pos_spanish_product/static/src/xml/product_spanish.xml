<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductItem" t-inherit="point_of_sale.ProductItem"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-name')]" position="inside">
            <t t-if="props.product.spanish_name">
                <span> (</span>
                <span style="background-color:rgb(204,204,204);">
                    <t t-esc="props.product.spanish_name"/>
                </span>
                <span>) </span>
            </t>
        </xpath>
    </t>
</templates>