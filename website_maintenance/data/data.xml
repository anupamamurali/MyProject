<?xml version="1.0" ?>
<odoo>

    <data noupdate="1">
        <!--Email template for maintenance request-->
        <record id="request_email_template" model="mail.template">
            <field name="name">Maintenance Request : Send by email</field>
            <field name="model_id" ref="maintenance.model_maintenance_request"/>
            <field name="email_from">
                ${object.company_id.email}
            </field>
            <field name="email_to">${object.email_cc}</field>
            <field name="subject">Maintenance Request(Ref ${object.name}) Application
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <strong>${object.name}</strong>
                        <br/>
                        <br/>
                        Thank you (<strong>${object.name}</strong>) for
                        submitting your maintenance request
                        (<strong>${object.name}</strong>). We are inform you
                        that you are selected for admission. Please Join in
                        (<strong>${object.name}</strong>).
                        <br/>
                        Admission No: (<strong>${object.name}</strong>)
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>

