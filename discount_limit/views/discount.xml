<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="config_settings_sale">
        <field name="name">res.config.settings.view.form.inherit.sale.frequent</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@data-key='sale_management']//field[@name='group_discount_per_so_line']"
                    position="after">
                 <div class="row mt16 o_setting_box">
                     <div class="col-12 col-lg-6 o_setting_box">
                         <div class="o_setting_left_pane"/>
                         <div class="o_setting_right_pane" attrs="{'invisible': [('group_discount_per_so_line', '=', False)]}">
                             <span class="o_form_label">Discount Limit</span>
                             <div class="text-muted content-group mt16">
                                 <field name="max_disc_limit" class="oe_inline" force_save="1"/>
                             </div>
                         </div>
                     </div>
                 </div>
             </xpath>
        </field>
    </record>
</odoo>