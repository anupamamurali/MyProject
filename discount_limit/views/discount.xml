<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="config_settings_sale">
        <field name="name">res.config.settings.view.form.inherit.sale.frequent</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@data-key='sale_management']//field[@name='group_discount_per_so_line']"
                    position="after">
                 <div class="row mt16 o_settings_container" name="sale_setting_container">
                     <div class="col-12 col-lg-6 o_setting_box" id="sale_order_discount">
                         <div class="o_setting_left_pane">
                             <div class="content-group">
                                 <div class="row mt16">
                                     <label for="max_disc_limit" class="col-lg-4 o_light_label"/>
                                     <field name="max_disc_limit"/>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
             </xpath>
        </field>
    </record>
</odoo>